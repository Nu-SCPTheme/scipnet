{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist/",
    "noEmitOnError": true,
    "module": "commonjs",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "resolveJsonModule": true,

    "lib": ["es6", "dom"],
    "noLib": false,

    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
