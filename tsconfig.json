{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "noEmitOnError": true,

    "lib": ["esnext", "dom"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
